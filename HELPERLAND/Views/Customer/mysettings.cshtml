@model HELPERLAND.Models.ViewModels.MysettingsViewmodel;
@{
    Layout = "../Shared/layout2.cshtml";
    ViewData["Title"] = "My Settings | Helperland";
}
<div class="modal fade addressmodal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form action="" id="addressvalidation">
                    <div class="d-flex forflexwrapextra">
                        <div class="d-flex flex-column" style="padding: 7.5px 15px;">
                            <label for="StreetName" class="formlable">Street Name</label>
                            <input type="text" class="addaddressform" id="StreetName" placeholder="Street Name"
                                asp-for="addaddressViewmodel.StreetName">
                            <span asp-validation-for="addaddressViewmodel.StreetName"></span>
                        </div>
                        <div class="d-flex flex-column" style="padding: 7.5px 15px;">
                            <label for="HouseNumber" class="formlable">House Number</label>
                            <input type="text" class="addaddressform" id="HouseNumber" placeholder="House Number"
                                asp-for="addaddressViewmodel.hno">
                            <span asp-validation-for="addaddressViewmodel.hno"></span>
                        </div>
                    </div>
                    <div class="d-flex forflexwrapextra">
                        <div class="d-flex flex-column" style="padding: 7.5px 15px;">
                            <label for="PostalCode" class="formlable">Postal Code</label>
                            <input type="text" class="addaddressform" id="PostalCode" placeholder=""
                                asp-for="addaddressViewmodel.poc">
                            <span asp-validation-for="addaddressViewmodel.poc"></span>
                        </div>
                        <div class="d-flex flex-column" style="padding: 7.5px 15px;">
                            <label for="City" class="formlable">City</label>
                            <select class="addaddressform" id="City" asp-for="addaddressViewmodel.City">
                                <option value="Berlin" selected>Berlin</option>
                                <option value="Munich">Munich</option>
                                <option value="Hamburg">Hamburg</option>
                            </select>
                            <span asp-validation-for="addaddressViewmodel.City"></span>

                        </div>
                    </div>
                    <div class="d-flex flex-column" style="padding: 7.5px 15px;">
                        <label for="addresscc" class="formlable">Phone Number</label>
                        <div class="d-flex">
                            <input type="text" placeholder="+49" disabled id="addresscc" class="addaddressform">
                            <input type="text" placeholder="" id="addressmono" class="addaddressform"
                                asp-for="addaddressViewmodel.PhoneNumber">
                        </div>
                        <span asp-validation-for="addaddressViewmodel.PhoneNumber"></span>
                    </div>
                    <div class="d-flex" style="padding: 7.5px 15px;">
                        <input type="submit" value="Save" class="addaddressform" id="saveaddress">
                        <p id="canceladdress" class="addaddressform" data-bs-dismiss="modal" aria-label="Close">
                            Cancel
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
