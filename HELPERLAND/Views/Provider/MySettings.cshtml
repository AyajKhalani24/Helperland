@model HELPERLAND.Models.ViewModels.PromysettingsViewmodel;
@{
    Layout = "../Shared/layout2.cshtml";
    ViewData["Title"] = "My Settings | Helperland";
}

<div class="d-flex justify-content-center align-items-start setupservicemaincontent mysettings w-100"
    style="margin-top: 50px;">

    <div class="setupform w-100">
        <ul class="nav mb-3 row g-0" id="pills-tab" role="tablist">
            <li class="nav-item col-6" role="presentation">
                <button class="nav-link active d-flex justify-content-center align-items-center w-100"
                    id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-Details" type="button" role="tab"
                    aria-controls="pills-Details" aria-selected="true">
                    <p class="dnformobile d-md-block d-none">My Details</p>
                    <img src="~/images/my-account-details.png" alt="" class="dnforstyle d-block d-md-none">
                </button>
            </li>
            <li class="nav-item col-6" role="presentation">
                <button class="nav-link d-flex justify-content-center align-items-center w-100" id="pills-contact-tab"
                    data-bs-toggle="pill" data-bs-target="#pills-changepassword" type="button" role="tab"
                    aria-controls="pills-changepassword" aria-selected="false">
                    <p class="dnformobile d-md-block d-none">Change Password</p>
                    <img src="~/images/my-account-password.png" alt="" class="dnforstyle d-block d-md-none">
                </button>
            </li>
        </ul>

        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-Details" role="tabpanel" aria-labelledby="pills-home-tab">
                <span class="errorspan2"></span>

                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div>
                            <p class="col-12 gendertag" style="display: inline;">Account-Status : </p>
                            <p style="color: #18be18; display: inline-block;"> Active</p>
                        </div>
                        <div class="col-10">
                            <p class="col-12 gendertag">Basic Details</p>
                        </div>
                    </div>
                    <img src="~/images/@Model.detailsViewmodel.ProfilePicture" alt="" class="img-fluid">
                </div>
                <hr style="width: 90%;">

                <form action="" id="savedetail">
                    <div class="row g-2 fnlnea ">
                        <div class="col-12 col-md-4">
                            <label for="detailsfname" class="detailslabel">First Name</label>
                            <input type="text" class="mydetailsdob w-100 mx-0 d-block" id="detailsfname"
                                placeholder="Last Name" asp-for="detailsViewmodel.FirstName">
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="detailslname" class="detailslabel">Last Name</label>
                            <input type="text" class="mydetailsdob w-100 mx-0 d-block" id="detailslname"
                                placeholder="Last Name" asp-for="detailsViewmodel.LastName">
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="detailsemail" class="detailslabel">Email Address</label>
                            <input type="email" class="mydetailsdob w-100 mx-0 d-block" id="detailsemail"
                                placeholder="Email Address" asp-for="detailsViewmodel.Email" disabled>
                        </div>
                    </div>
                    <div class="row g-2 fnlnea">
                        <div class="col-12 col-md-4">
                            <label for="detailscc">Mobile Number</label>
                            <div class="row g-0">
                                <div class="col-2 rounded-start mx-0" id="detailscc">+91</div>
                                <input type="text" class="col-10 rounded-end mx-0 d-block" id="detailsmono"
                                    asp-for="detailsViewmodel.PhoneNumber">
                            </div>
                        </div>
                        <div class="col-12 col-md-4">

                            <label for="detailsdobdate">Date Of Birth</label>
                            <div class="detailsdob row g-1">
                                <div class="col-3">
                                    <select class="mx-0 d-block mydetailsdob" id="detailsdobdate"
                                        asp-for="detailsViewmodel.DobDate">
                                        <option value="" disabled>Date</option>
                                        <option value="1">01</option>
                                        <option value="2">02</option>
                                        <option value="3">03</option>
                                        <option value="4">04</option>
                                        <option value="5">05</option>
                                        <option value="6">06</option>
                                        <option value="7">07</option>
                                        <option value="8">08</option>
                                        <option value="9">09</option>
                                        <option value="10">10</option>
                                        <option value="11">11</option>
                                        <option value="12">12</option>
                                        <option value="13">13</option>
                                        <option value="14">14</option>
                                        <option value="15">15</option>
                                        <option value="16">16</option>
                                        <option value="17">17</option>
                                        <option value="18">18</option>
                                        <option value="19">19</option>
                                        <option value="20">20</option>
                                        <option value="21">21</option>
                                        <option value="22">22</option>
                                        <option value="23">23</option>
                                        <option value="24">24</option>
                                        <option value="25">25</option>
                                        <option value="26">26</option>
                                        <option value="27">27</option>
                                        <option value="28">28</option>
                                        <option value="29">29</option>
                                        <option value="30">30</option>
                                        <option value="31">31</option>
                                    </select>
                                </div>
                                <div class="col-5">
                                    <select class="mx-0 d-block mydetailsdob" id="detailsdobmonth"
                                        asp-for="detailsViewmodel.DobMonth">
                                        <option value="" disabled>Month</option>
                                        <option value="1">January</option>
                                        <option value="2">February</option>
                                        <option value="3">March</option>
                                        <option value="4">April</option>
                                        <option value="5">May</option>
                                        <option value="6">June</option>
                                        <option value="7">July</option>
                                        <option value="8">August</option>
                                        <option value="9">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">December</option>
                                    </select>
                                </div>
                                <div class="col-4">
                                    <select id="detailsdobyear" class="mx-0 d-block mydetailsdob"
                                        asp-for="detailsViewmodel.DobYear">
                                        <option value="" disabled>Year</option>
                                        <option value="2004">2004</option>
                                        <option value="2003">2003</option>
                                        <option value="2002">2002</option>
                                        <option value="2001">2001</option>
                                        <option value="2000">2000</option>
                                        <option value="1999">1999</option>
                                        <option value="1998">1998</option>
                                        <option value="1997">1997</option>
                                        <option value="1996">1996</option>
                                        <option value="1995">1995</option>
                                        <option value="1994">1994</option>
                                        <option value="1993">1993</option>
                                        <option value="1992">1992</option>
                                        <option value="1991">1991</option>
                                        <option value="1990">1990</option>
                                        <option value="1989">1989</option>
                                        <option value="1988">1988</option>
                                        <option value="1987">1987</option>
                                        <option value="1986">1986</option>
                                        <option value="1985">1985</option>
                                        <option value="1984">1984</option>
                                        <option value="1983">1983</option>
                                        <option value="1982">1982</option>
                                        <option value="1981">1981</option>
                                        <option value="1980">1980</option>
                                        <option value="1979">1979</option>
                                        <option value="1978">1978</option>
                                        <option value="1977">1977</option>
                                        <option value="1976">1976</option>
                                        <option value="1975">1975</option>
                                        <option value="1974">1974</option>
                                        <option value="1973">1973</option>
                                        <option value="1972">1972</option>
                                        <option value="1971">1971</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="detailsdobnationality">Nationality</label>
                            <select id="detailsdobnationality" class="mydetailsdob w-100 mx-0 d-block"
                                asp-for="detailsViewmodel.Nationality">
                                <option value="1">German</option>
                                <option value="2">Indian</option>
                                <option value="3">British</option>
                                <option value="4">Spanish</option>
                            </select>
                        </div>
                    </div>
                    <div class="row g-2 fnlnea mb-1">
                        <p class="col-12 gendertag">Gender</p>
                        <div class="d-flex justify-content-start align-items-center">
                            <div class="radiodiv d-flex align-items-center">
                                <input type="radio" id="M" value="1" class="form-check-input"
                                    asp-for="detailsViewmodel.Gender">
                                <label for="M" class="genderlabel">Male</label>
                            </div>
                            <div class="radiodiv d-flex align-items-center">
                                <input type="radio" id="F" value="2" class="form-check-input"
                                    asp-for="detailsViewmodel.Gender">
                                <label for="F" class="genderlabel">Female</label>
                            </div>
                            <div class="d-flex align-items-center">
                                <input type="radio" id="RNTS" value="3" class="form-check-input"
                                    asp-for="detailsViewmodel.Gender">
                                <label for="RNTS" class="genderlabel">Rather not to say</label>
                            </div>
                        </div>
                    </div>
                    <div class="row g-2 fnlnea mb-1 avatar">
                        <p class="col-12 gendertag mt-3">Avatar</p>
                        <div class="col-2 col-md-1 d-flex align-items-center">
                            <input type="radio" id="car" value="avatar-car.png" hidden
                                asp-for="detailsViewmodel.ProfilePicture">
                            <label for="car" class="genderlabel"><img src="~/images/avatar-car.png" alt=""
                                    class="img-fluid"></label>
                        </div>
                        <div class="col-2 col-md-1 d-flex align-items-center">
                            <input type="radio" id="female" value="avatar-female.png" hidden
                                asp-for="detailsViewmodel.ProfilePicture">
                            <label for="female" class="genderlabel"><img src="~/images/avatar-female.png" alt=""
                                    class="img-fluid" style="cursor: pointer;"></label>
                        </div>
                        <div class="col-2 col-md-1 d-flex align-items-center">
                            <input type="radio" id="hat" value="avatar-hat.png" hidden
                                asp-for="detailsViewmodel.ProfilePicture">
                            <label for="hat" class="genderlabel"><img src="~/images/avatar-hat.png" alt=""
                                    class="img-fluid" style="cursor: pointer;"></label>
                        </div>
                        <div class="col-2 col-md-1 d-flex align-items-center">
                            <input type="radio" id="iron" value="avatar-iron.png" hidden
                                asp-for="detailsViewmodel.ProfilePicture">
                            <label for="iron" class="genderlabel"><img src="~/images/avatar-iron.png" alt=""
                                    class="img-fluid" style="cursor: pointer;"></label>
                        </div>
                        <div class="col-2 col-md-1 d-flex align-items-center">
                            <input type="radio" id="male" value="avatar-male.png" hidden
                                asp-for="detailsViewmodel.ProfilePicture">
                            <label for="male" class="genderlabel"><img src="~/images/avatar-male.png" alt=""
                                    class="img-fluid" style="cursor: pointer;"></label>
                        </div>
                        <div class="col-2 col-md-1 d-flex align-items-center">
                            <input type="radio" id="ship" value="avatar-ship.png" hidden
                                asp-for="detailsViewmodel.ProfilePicture">
                            <label for="ship" class="genderlabel"><img src="~/images/avatar-ship.png" alt=""
                                    class="img-fluid" style="cursor: pointer;"></label>
                        </div>
                    </div>

                    <div class="row g-2 fnlnea mb-1">
                        <p class="col-12 gendertag mt-3">My Addresses</p>
                        <hr>
                        <div class="col-12 col-md-4">
                            <label for="detailsstreetname" class="detailslabel">Street Name</label>
                            <input type="text" class="mydetailsdob w-100 mx-0 d-block" id="detailsstreetname"
                                placeholder="Street Name" asp-for="detailsViewmodel.StreetName">
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="detailshousenumber" class="detailslabel">House Number</label>
                            <input type="text" class="mydetailsdob w-100 mx-0 d-block" id="detailshousenumber"
                                placeholder="House Number" asp-for="detailsViewmodel.HouseNumber">
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="detailpostalcode" class="detailslabel">Postal Code</label>
                            <input type="text" class="mydetailsdob w-100 mx-0 d-block" id="detailspostalcode"
                                placeholder="Postal Code" asp-for="detailsViewmodel.PostalCode">
                        </div>
                    </div>
                    <div class="row g-2 fnlnea mb-1">
                        <div class="col-12 col-md-4">
                            <label for="detailscity" class="detailslabel">City</label>
                            <input type="text" class="mydetailsdob w-100 mx-0 d-block" id="detailscity"
                                placeholder="City" asp-for="detailsViewmodel.City">
                        </div>
                    </div>
                    <hr>
                    <input type="submit" value="Save" class="checkavail my-2" id="changedetailssubmit">
                </form>
            </div>



            <div class="tab-pane fade" id="pills-changepassword" role="tabpanel" aria-labelledby="pills-contact-tab">
                <span class="errorspan"></span>
                <form action="" id="changepassword">
                    <div class="d-flex flex-column">
                        <label for="oldpassword">Old Password</label>
                        <input type="password" id="oldpassword" class="mydetailsdob" placeholder="Old Password"
                            asp-for="changepasswordViewmodel.OldPassword">
                        <span asp-validation-for="changepasswordViewmodel.OldPassword"></span>
                    </div>
                    <div class="d-flex flex-column">
                        <label for="newpassword">New Password</label>
                        <input type="password" id="newpassword" class="mydetailsdob" placeholder="New Password"
                            asp-for="changepasswordViewmodel.NewPassword">
                        <span asp-validation-for="changepasswordViewmodel.NewPassword"></span>
                    </div>
                    <div class="d-flex flex-column">
                        <label for="confirmpassword">Confirm Password</label>
                        <input type="password" id="confirmpassword" class="mydetailsdob" placeholder="Confirm Password"
                            asp-for="changepasswordViewmodel.ConfirmPassword">
                        <span asp-validation-for="changepasswordViewmodel.ConfirmPassword"></span>
                    </div>
                    <input type="submit" value="Save" class="checkavail mb-2" id="changepasswordsubmit">
                </form>
            </div>
        </div>
    </div>
</div>
<div class="loaderContainer">
    <div class="loader rounded-circle"></div>
</div>





@section CustomScripts{
<script src="/js/promysettings.js"></script>
}