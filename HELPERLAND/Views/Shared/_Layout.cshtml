@model HELPERLAND.Models.ViewModels.LoginViewmodel;
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" media='screen and (min-width: 140px) and (max-width: 918px)' href="~/css/mobile.css"/>
    <link rel="stylesheet" media='screen and (min-width: 918px) and (max-width: 1194px)' href="~/css/tablat.css"/>
    <link rel="stylesheet" media='screen and (min-width: 1194px)' href="~/css/style.css"/> 

    <title>@ViewData["Title"]</title>
  </head>
  <body>

    <div class="navfacq">
        <div class="logo" id="facqlogo">
            <img src="~/images/logo-small.png" alt="">

            <div class="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
        
        <div class="facqnavitem">
            <a href="" class="facqnav rf">Book Now</a>
            <a asp-controller="home" asp-action="price" class="facqnav nf">Prices & Services</a>
            <a href="" class="facqnav">Warranty</a>
            <a href="" class="facqnav">Blog</a>
            <a asp-controller="home" asp-action="Contact" class="facqnav">Contact</a>
            <a href="" class="navhome" id="r" data-bs-toggle="modal" data-bs-target="#exampleModal">Login</a>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Log in</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              <form asp-controller="Signup" asp-action="Login" method="post">
                                    <input type="email" id="loginemail" placeholder="Email Address"
                                        class="formdecoration" asp-for="Email">
                                    <input type="password" id="loginpassword" placeholder="Password"
                                        class="formdecoration" asp-for="Password">
                                    <div class="check logincheck">
                                        <input type="checkbox" value="1" id="logincheckbox" class="checkbox"
                                            asp-for="Remember">
                                        <pre>  </pre>
                                        <p class="">Remember Me</p>
                                    </div>
                                    <button type="submit" class="btn btn-primary loginbutton ms-4">Log In</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                

                                <a href="#" class="forgetpassword">Forgot Password?</a>
                                <p class="loginpara">Don't have an account?</p>
                                <a asp-controller="home" asp-action="Signup" class="createaccount">Create an Account</a>

                            </div>
                        </div>
                    </div>
                </div>
            <a asp-controller="home" asp-action="becomeprovider" class="facqnav rf">Become A Helper</a>
        </div>
    </div>

    @RenderBody()

    <div class="footer">
        <div class="img">
            <img src="~/images/white_logo_transparent_background copy 4.png" alt=""  class="footerlogo">
        </div>
        <div id="navbottomflex">
            <a asp-controller="home" asp-action="index" class="navb">Home</a>
            <a asp-controller="home" asp-action="About" class="navb">About</a>
            <a href="" class="navb">Testimonials</a>
            <a asp-controller="home" asp-action="Facq" class="navb">FAQS</a>
            <a href="" class="navb">Insurance Policy</a>
            <a href="" class="navb">Impressum</a>
        </div> 
        <div class="igfb">   
            <a href="https:/www.instagram.com/__aaiyaz_24" class="navb" ><img src="~/images/Forma 1_3.png" alt="" id="ig"></a>
            <a href="https:/www.facebook.com/Ayaj Khalani" class="navb" ><img src="~/images/Forma 1_5.png" alt="" id="ig"></a>
        </div>
    </div>
    
    <div class="terms text-center">
        ©2018 Helperland. All rights reserved. <a href="#" class="text-decoration a-color">Terms and Conditions</a> | <a href="#" class="text-decoration a-color">Privacy Policy</a>
    </div>
    
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$('.hamburger').click(()=>{
    $('.hamburger').toggleClass('toggle');
    $('.facqnavitem').toggleClass('toggle');
})
</script>
  </body>
</html>