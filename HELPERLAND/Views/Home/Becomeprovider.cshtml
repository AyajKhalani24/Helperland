        <form asp-controller="Signup" asp-action="Becomeprovider">
            <div class="becomepro">
                <h2 class="register"><b>Register Now!</b></h2>

                <input type="text" id="fname" placeholder="First Name" class="becomeprodecoration" asp-for="FirstName">
                <span asp-validation-for="FirstName"></span>
                <input type="text" id="lname" placeholder="Last Name" class="becomeprodecoration" asp-for="LastName">
                <span asp-validation-for="LastName"></span>

                <input type="email" id="becomeproemail" placeholder="Email Address" class="becomeprodecoration"
                    asp-for="Email">
                <span asp-validation-for="Email"></span>
                <div class="bpccmono">
                    <input type="text" name="ccbecomepro" id="ccbecomepro" placeholder="+46">
                    <input type="text" id="monobecomepro" placeholder="Phone Number" asp-for="Mobile">
                    <span asp-validation-for="Mobile"></span>
                </div>

                <input type="text" id="password" placeholder="Password" class="becomeprodecoration" asp-for="Password">
                <span asp-validation-for="Password"></span>

                <input type="text" name="cpassword" id="cpassword" placeholder="Confirm Password"
                    class="becomeprodecoration">

                <div class="checkboxes">
                    <div class="check">
                        <input type="checkbox" name="smnfh" id="smnfh" class="checkbox">
                        <pre>  </pre>
                        <p class="smnfh"> Send me newsletters from Helperland</p>
                    </div>
                    <div class="check">
