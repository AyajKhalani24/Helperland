@model HELPERLAND.Models.ViewModels.SignupViewmodel;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BecomeProvider| Helperland</title>
    <!-- <link rel="stylesheet" href="style.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" media='screen and (min-width: 140px) and (max-width: 857px)' href="~/css/mobile.css"/>
    <link rel="stylesheet" media='screen and (min-width: 857px) and (max-width: 1194px)' href="~/css/tablat.css"/>
    <link rel="stylesheet" media='screen and (min-width: 1194px)' href="~/css/style.css"/> 
</head>
<body>
    <div id="becomeaprovider">
        <div class="navbarhome">
            <div class="logo">
                <img src="~/images/white_logo_transparent_background.png" alt="" id="logoooo">
                <div class="hamburger">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
            <div id="navm">
                <a href="" class="navhome" id="r">Book a Cleaner</a>
                <a asp-controller="home" asp-action="price" class="navhome">Prices</a>
                <a href="" class="navhome">Our Gurantee</a>
                <a href="" class="navhome">Blog</a>
                <a asp-controller="home" asp-action="Contact" class="navhome">Contact Us</a>
                <a href="" class="navhome" id="r" data-bs-toggle="modal" data-bs-target="#exampleModal">Login</a>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Log in</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form asp-controller="home" asp-action="login" method="post"></form>
                                <input type="email" id="loginemail" name="email" placeholder="Email Address"
                                    class="formdecoration">
                                <input type="text" id="loginpassword" name="password" placeholder="Password"
                                    class="formdecoration">
                                <div class="check logincheck">
                                    <input type="checkbox" name="" id="logincheckbox" class="checkbox">
                                    <pre>  </pre>
                                    <p class="">Remember Me</p>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary loginbutton">Log In</button>

                                <a href="#" class="forgetpassword">Forgot Password?</a>
                                <p class="loginpara">Don't have an account?</p>
                                <a asp-controller="home" asp-action="Signup" class="createaccount">Create an Account</a>

                            </div>
                        </div>
                    </div>
                </div>
                <a asp-controller="home" asp-action="becomeprovider" class="navhome" id="r">Become A Helper</a>
                <a href="" class="england">
                    <img src="~/images/flagengland.png" alt="">
                    <img src="~/images/selfside.png" alt="">
                </a>
            </div>
        </div>

        <form asp-controller="Signup" asp-action="Becomeprovider">
            <div class="becomepro">
                <h2 class="register"><b>Register Now!</b></h2>

                <input type="text" id="fname" placeholder="First Name" class="becomeprodecoration" asp-for="FirstName">

                <input type="text" id="lname" placeholder="Last Name" class="becomeprodecoration" asp-for="LastName">

                <input type="email" id="becomeproemail" placeholder="Email Address" class="becomeprodecoration" asp-for="Email">

                <div class="bpccmono">
                    <input type="text" name="ccbecomepro" id="ccbecomepro" placeholder="+46">
                    <input type="text" id="monobecomepro" placeholder="Phone Number" asp-for="Mobile">
                </div>

                <input type="text" id="password" placeholder="Password" class="becomeprodecoration" asp-for="Password">

                <input type="text" name="cpassword" id="cpassword" placeholder="Confirm Password" class="becomeprodecoration">

                <div class="checkboxes">
                    <div class="check">
                        <input type="checkbox" name="smnfh" id="smnfh" class="checkbox"><pre>  </pre>
                        <p class="smnfh"> Send me newsletters from Helperland</p>
                    </div>
                    <div class="check">
                        <input type="checkbox" name="acceptt&c" id="acceptt&c" class="checkbox"><pre>  </pre>
                        <p class="smnfh">I accept <a class="blue">terms and conditions</a> & <a class="blue">privacy policy</a></p>
                    </div>
                </div>

                <img src="~/images/layer-20.png" style="margin: 2px 0px;" alt="">

                <button class="becomeprosubmit">Get Started <img src="~/images/shape-2.png" alt=""></button>
            </div>
        </form>

        <div id="downarrow">
             <a href="#prosedure"><img src="~/images/Shape 1.png" alt="" id="da"></a>
        </div>
    </div>

    <section id="prosedure">
        <h2>How it works</h2>

        <img class="blogleft" src="~/images/blog-left-bg.png" alt="">
        <img class="blogright" src="~/images/blog-right-bg.png" alt="">

        <div class="child">
            <div class="child11">
                <p class="proceheader">Register yourself</p>
                <p class="procedisc">Provide your basic information to register yourself as a service provider.</p>
                <a class="readmorebecomeprovider" href="#">Read More <img src="~/images/Shape 2.png" alt=""></a>
            </div>
            <img src="~/images/proce1.png" alt="" class="child12">
        </div>
        <div class="child">
            <img src="~/images/proce2.png" alt="" class="child12">
            <div class="child22">
                <p class="proceheader">Get service requests</p>
                <p class="procedisc">you will get service request from customers depend on service area and profile.</p>
                <a class="readmorebecomeprovider" href="#">Read More <img src="~/images/Shape 2.png" alt=""></a>
            </div>
        </div>
        <div class="child">
            <div class="child11">
                <p class="proceheader">Complete service</p>
                <p class="procedisc">Accept service requests from your customers and complete your work.</p>
                <a class="readmorebecomeprovider" href="#">Read More <img src="~/images/Shape 2.png" alt=""></a>
            </div>
            <img src="~/images/proce3.png" alt="" class="child12">
        </div>

    </section>

    <div id="getonscontent">
        <p class="getonsp">GET OUR NEWSLETTER</p>
        <form action="">
            <input type="email" placeholder="YOUR EMAIL" id="getonsemail">
            <input type="submit" id="submitbutton">
        </form>
      </div>
      
      
      <div class="footer">
        <div class="img">
            <img src="~/images/white_logo_transparent_background copy 4.png" alt=""  class="footerlogo">
        </div>
        <div id="navbottomflex">
            <a href="#home" class="navb">Home</a>
            <a href="" class="navb">About</a>
            <a href="" class="navb">Testimonials</a>
            <a href="" class="navb">FAQS</a>
            <a href="" class="navb">Insurance Policy</a>
            <a href="" class="navb">Impressum</a>
        </div> 
        <div class="igfb">   
            <a href="https:/www.instagram.com/__aaiyaz_24" class="navb" ><img src="~/images/Forma 1_3.png" alt="" id="ig"></a>
            <a href="https:/www.facebook.com/Ayaj Khalani" class="navb" ><img src="~/images/Forma 1_5.png" alt="" id="ig"></a>
        </div>
      </div>
      
      <div class="terms text-center">
        Â©2018 Helperland. All rights reserved. <a href="#" class="text-decoration a-color">Terms and Conditions</a> | <a href="#" class="text-decoration a-color">Privacy Policy</a>
    </div>
    

    
