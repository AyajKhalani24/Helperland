@model HELPERLAND.Models.ViewModels.SignupViewmodel;
@{
    ViewData["Title"] = "Sign Up | Helperland";
}

<div class="facqheader">
    <p style="padding:0px 10px ;">Create An Account</p>
</div>
<div class="faHeaderDecoration">
    <span class="line"></span>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="25">
        <path fill-rule="evenodd" fill="#1D7A8C"
            d="M22.93 13.616c.575 0 1.068-.481 1.068-1.122 0-.56-.493-1.041-1.068-1.041-.987 0-9.26-.321-9.26-10.053 0-.921-1.096-1.3-1.671-1.3-.576 0-1.069.379-1.069 1.3 0 9.732-8.39 10.053-9.26 10.053H.985c-.575.08-.985.481-.985 1.041 0 1.056.492 1.041 1.67 1.041.466 0 9.26.321 9.26 10.414 0 .56.493 1.041 1.069 1.041.493.71.986-.401.986-.71 0-10.344 8.876-10.664 9.863-10.664h.082z" />
    </svg>
    <span class="line"></span>
</div>


<div class="signuppage">
    <form asp-controller="signup" asp-action="Signup" method="post">
        <div class="horiflex">
            <div class="d-flex flex-column">
                <input type="text" id="signupfirstname" class="formdecoration" placeholder="First Name"
                    asp-for="FirstName">
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="d-flex flex-column">
                <input type="text" id="signuplastname" class="formdecoration" placeholder="Last Name"
                    asp-for="LastName">
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="horiflex">
            <div class="d-flex flex-column">
                <input type="text" id="signupemail" placeholder="Email Address" class="formdecoration" asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="d-flex flex-column">
                <div class="signupccmono">
                    <input type="text" id="signupcc" class="formdecoration" placeholder="+49" disabled>
                    <input type="text" id="signupmono" class="formdecoration" placeholder="Mobile number"
                        asp-for="Mobile">
                </div>
                <span asp-validation-for="Mobile"></span>
            </div>
        </div>
        <div class="horiflex">
            <div class="d-flex flex-column">
                <input type="password" id="signuppassword" class="formdecoration" placeholder="Password"
                    asp-for="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="d-flex flex-column">
                <input type="password" id="signupconfirmpassword" class="formdecoration" placeholder="Confirm Password"
                    asp-for="CPassword">
                <span asp-validation-for="CPassword"></span>
            </div>
        </div>
        <div class="check logincheck">
            <input type="checkbox" id="logincheckbox" class="checkbox">
            <pre>  </pre>
            <p>I have read the <a href="">Privacy Policy</a></p>
        </div>
        <div class="submit signupsubmit">
            <button type="submit" class="formdecoration" id="submitbutton">Submit</button>
        </div>

    </form>
    <p>Already registered?</p>
    <a class="CAloginbtn">Login now</a>
</div>
@section CustomScripts{
<script>
    document.querySelector(".CAloginbtn").addEventListener('click', () => {
        document.querySelector(".loginbtn").click()
    })
</script>
}